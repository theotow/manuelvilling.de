{
	"name": "@local/frontend",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"postinstall": "./node_modules/.bin/next build",
		"start": "./node_modules/.bin/next dev",
		"start-ssr": "node index.js",
		"deploy": "NODE_ENV=production ../../node_modules/.bin/lerna bootstrap --scope @local/frontend --scope @local/shared && npm run build && ./node_modules/.bin/serverless deploy",
		"deploy-prod": "npm run deploy -- --stage prod",
		"build": "./node_modules/.bin/next build",
		"build-start": "NODE_ENV=production node index.js",
		"lint": "./node_modules/.bin/eslint './**/*.js'",
		"lint-fix": "npm run lint -- --fix",
		"pretty": "./node_modules/.bin/lint-staged",
		"pretty-all": "./node_modules/.bin/prettier --write './src/**/*.js'",
		"test": "NODE_ENV=test ./node_modules/.bin/jest",
		"test-in": "./node_modules/.bin/testcafe --debug-on-fail --concurrency 1 --screenshots ./tests/screens chrome tests/**.js",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"jest": {
		"testURL": "http://localhost/",
		"moduleNameMapper": {
			"\\.(svg|png|woff)$": "<rootDir>/tests/__mocks__/empty-module.js"
		},
		"setupFiles": [
			"<rootDir>/jest.setup.js"
		],
		"transform": {
			"^.+\\.js?$": "babel-jest"
		},
		"testPathIgnorePatterns": [
			"/.next/",
			"/node_modules/"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/.next/",
			"/coverage/"
		]
	},
	"lint-staged": {
		"*.{js,css,md}": [
			"prettier --write"
		]
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@local/shared": "^1.0.0",
		"animated": "^0.2.2",
		"apollo-client": "^2.4.6",
		"aws-serverless-express": "^3.3.5",
		"express": "^4.16.4",
		"graphql": "^0.13.2",
		"graphql-tag": "^2.9.2",
		"next": "theotow/next.js#with-serverless-support-7",
		"node-fetch": "^2.3.0",
		"ramda": "^0.26.0",
		"react": "^16.6.3",
		"react-animations": "^1.0.0",
		"react-apollo": "^2.3.1",
		"react-dom": "^16.6.3",
		"react-router": "^4.3.1",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.3.1",
		"rxjs": "^6.3.3",
		"rxjs-compat": "^6.3.3",
		"styled-components": "^3.4.9"
	},
	"devDependencies": {
		"@storybook/addon-actions": "^4.0.7",
		"@storybook/addon-links": "^4.0.7",
		"@storybook/addons": "^4.0.7",
		"@storybook/cli": "^4.0.7",
		"@storybook/react": "^4.0.7",
		"babel-core": "^6.26.3",
		"babel-eslint": "^10.0.1",
		"babel-jest": "^23.6.0",
		"babel-plugin-styled-components": "^1.5.1",
		"babel-runtime": "^6.26.0",
		"enzyme": "^3.7.0",
		"enzyme-adapter-react-16": "^1.7.0",
		"eslint": "^5.9.0",
		"eslint-plugin-jest": "^22.0.0",
		"eslint-plugin-react": "^7.11.1",
		"jest": "^23.6.0",
		"lint-staged": "^8.0.5",
		"prettier": "^1.15.2",
		"serverless": "^1.32.0",
		"serverless-domain-manager": "^2.6.5",
		"testcafe": "^0.20.5",
		"testcafe-react-selectors": "^2.1.0",
		"url-loader": "^1.1.2"
	}
}
