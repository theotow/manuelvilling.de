{
	"name": "@local/frontend",
	"version": "1.0.0",
	"description": "",
	"main": ".next/dist/bundles/pages/server.js",
	"scripts": {
		"postinstall": "./node_modules/.bin/next build",
		"start": "./node_modules/.bin/next dev",
		"start-ssr": "node index.js",
		"deploy":
			"../../node_modules/.bin/lerna bootstrap --scope @local/frontend --scope @local/shared && npm run build && ./node_modules/.bin/serverless deploy",
		"deploy-prod": "npm run deploy -- --stage prod",
		"build": "./node_modules/.bin/next build",
		"build-start": "NODE_ENV=production node index.js",
		"lint": "./node_modules/.bin/eslint ./**/*.js",
		"pretty": "./node_modules/.bin/lint-staged",
		"test": "NODE_ENV=test ./node_modules/.bin/jest",
		"test-in":
			"./node_modules/.bin/testcafe --debug-on-fail --concurrency 1 --screenshots ./tests/screens chrome tests/**.js",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"jest": {
		"setupFiles": ["<rootDir>/jest.setup.js"],
		"transform": {
			"^.+\\.js?$": "babel-jest"
		},
		"testPathIgnorePatterns": ["/.next/", "/node_modules/"],
		"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/.next/",
			"/coverage/"
		]
	},
	"lint-staged": {
		"*.{js,json,css,md}": ["prettier --write"]
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@local/shared": "^1.0.0",
		"animated": "^0.2.2",
		"apollo-client": "^2.3.1",
		"aws-serverless-express": "^3.2.0",
		"express": "^4.16.3",
		"graphql": "^0.13.2",
		"graphql-tag": "^2.9.2",
		"mobx": "^4.3.0",
		"mobx-react": "^5.1.2",
		"next": "theotow/next.js#with-serverless-support",
		"node-fetch": "^2.1.2",
		"ramda": "^0.25.0",
		"react": "^16.3.2",
		"react-animations": "^1.0.0",
		"react-apollo": "^2.1.4",
		"react-dom": "^16.3.2",
		"react-redux": "^5.0.7",
		"react-responsive": "^4.1.0",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.2.2",
		"redux": "^4.0.0",
		"redux-devtools-extension": "^2.13.2",
		"redux-observable": "^0.18.0",
		"rollup": "^0.61.0",
		"rollup-plugin-commonjs": "^9.1.3",
		"rollup-plugin-node-resolve": "^3.3.0",
		"rsuite": "^3.1.0",
		"rxjs": "^6.2.0",
		"rxjs-compat": "^6.2.0",
		"styled-components": "^3.2.6"
	},
	"devDependencies": {
		"@storybook/addon-actions": "^3.4.6",
		"@storybook/addon-links": "^3.4.6",
		"@storybook/addons": "^3.4.6",
		"@storybook/cli": "^3.4.6",
		"@storybook/react": "^3.4.6",
		"babel-core": "7.0.0-bridge.0",
		"babel-eslint": "^8.2.3",
		"babel-jest": "^23.0.0",
		"babel-plugin-styled-components": "^1.5.1",
		"babel-runtime": "^6.26.0",
		"copy-webpack-plugin": "^4.5.1",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"eslint": "^4.19.1",
		"eslint-plugin-jest": "^21.15.2",
		"eslint-plugin-react": "^7.8.2",
		"jest": "^23.0.0",
		"lint-staged": "^7.1.2",
		"prettier": "1.12.1",
		"react-test-renderer": "^16.4.0",
		"serverless": "^1.27.3",
		"serverless-domain-manager": "^2.4.0",
		"serverless-webpack": "^5.1.5",
		"testcafe": "^0.20.2",
		"webpack-node-externals": "^1.7.2"
	}
}
